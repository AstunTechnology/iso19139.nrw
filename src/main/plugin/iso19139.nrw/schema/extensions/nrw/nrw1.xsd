	xmlns:xlink="http://www.w3.org/1999/xlink" 
	xmlns:gml="http://www.opengis.net/gml/3.2" 
	xmlns:gmd="http://www.isotc211.org/2005/gmd" 
	xmlns:gco="http://www.isotc211.org/2005/gco" 
	xmlns:nrw="http://naturalresources.wales/nrw" 
	targetNamespace="http://naturalresources.wales/nrw" elementFormDefault="qualified" version="1.0">
	<xs:annotation>
		<xs:documentation>Schema for Natural Resources Wales Metadata Profile v1</xs:documentation>
	</xs:annotation>
	<xs:import namespace="http://www.isotc211.org/2005/gmd" schemaLocation="../../gmd/gmd.xsd"/>
	<xs:import namespace="http://www.isotc211.org/2005/gco" schemaLocation="../../gco/gco.xsd"/>
	<xs:import namespace="http://www.isotc211.org/2005/srv" schemaLocation="../../srv/srv.xsd"/>
	<xs:import namespace="http://www.opengis.net/gml/3.2" schemaLocation="../../gml/gml.xsd"/>
	<!-- =========================================================================== -->

	<xs:annotation>
		<xs:documentation>Extensions to hold additional NRW elements</xs:documentation>
	</xs:annotation>

	<!-- Define element for Internal NRW Info elements. Extends gmd:distributionInfo -->

	<xs:element name="NRW_internalInfo" type="nrw:NRW_internalInfo_Type" subsitutionGroup="gmd:MD_Distributor"/>


	<xs:complexType name="NRW_internalInfo_Type">
		<xs:annotation>
			<xs:documentation>
				NRW Internal Information
			</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="gmd:MD_Distributor">
				<xs:sequence minOccurs="0">
					<xs:sequence>
					<xs:element name="internalLocationInfo" type="gco:CharacterString_PropertyType" minOccurs="0" maxOccurs="1"/>
						<xs:element name="internalContactInfo" type="gco:CharacterString_PropertyType" minOccurs="0" maxOccurs="1"/>
						<xs:element name="relatedTitle" type="gco:CharacterString_PropertyType" minOccurs="0"/>
				</xs:sequence>
				</xs:sequence>
				<xs:attribute ref="gco:isoType" use="required" fixed="gmd:MD_Distributor"/> 
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="NRW_internalInfo_PropertyType">
		<xs:sequence>
		 <xs:element ref="nrw:NRW_internalInfo" minOccurs="1"/>
		</xs:sequence>
		<xs:attributeGroup ref="gco:ObjectReference"/>
		<xs:attribute ref="gco:nilReason"/>
	</xs:complexType>

 

